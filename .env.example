# ============================================================================
# Universal Copilot Platform - Environment Configuration
# ============================================================================
# Copy this file to .env and configure with your actual values
# DO NOT commit .env to version control (already in .gitignore)
# ============================================================================

# ============================================================================
# Application Settings
# ============================================================================

# Environment (dev, staging, prod)
UCP_ENV=dev

# Application name and version
UCP_APP_NAME="Universal Copilot Platform"
UCP_VERSION=1.0.0

# Debug mode (set to false in production)
UCP_DEBUG=true

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
UCP_LOG_LEVEL=INFO

# API Settings
UCP_API_HOST=0.0.0.0
UCP_API_PORT=8000
UCP_API_WORKERS=4

# CORS Settings (comma-separated origins)
UCP_CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# ============================================================================
# Database Configuration
# ============================================================================

# PostgreSQL Connection
UCP_DATABASE__URL=postgresql+asyncpg://postgres:postgres@localhost:5432/universal_copilot
UCP_DATABASE__ECHO=false
UCP_DATABASE__POOL_SIZE=20
UCP_DATABASE__MAX_OVERFLOW=10
UCP_DATABASE__POOL_TIMEOUT=30
UCP_DATABASE__POOL_RECYCLE=3600

# ============================================================================
# Vector Store Configuration
# ============================================================================

# Vector database type (qdrant, milvus, weaviate, pgvector)
UCP_VECTOR_STORE__TYPE=qdrant

# Qdrant Configuration
UCP_VECTOR_STORE__URL=http://localhost:6333
UCP_VECTOR_STORE__API_KEY=
UCP_VECTOR_STORE__COLLECTION_NAME=universal_copilot
UCP_VECTOR_STORE__EMBEDDING_DIM=1536

# Milvus Configuration (alternative)
# UCP_MILVUS__HOST=localhost
# UCP_MILVUS__PORT=19530
# UCP_MILVUS__USER=
# UCP_MILVUS__PASSWORD=

# ============================================================================
# LLM Provider API Keys
# ============================================================================

# OpenAI
UCP_OPENAI_API_KEY=sk-your-openai-api-key-here
UCP_OPENAI_ORG_ID=
UCP_OPENAI_BASE_URL=https://api.openai.com/v1
UCP_OPENAI_DEFAULT_MODEL=gpt-4o
UCP_OPENAI_MAX_TOKENS=4096
UCP_OPENAI_TEMPERATURE=0.7

# Anthropic Claude
UCP_ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
UCP_ANTHROPIC_BASE_URL=https://api.anthropic.com
UCP_ANTHROPIC_DEFAULT_MODEL=claude-3-5-sonnet-20241022
UCP_ANTHROPIC_MAX_TOKENS=4096
UCP_ANTHROPIC_TEMPERATURE=0.7

# IBM watsonx.ai
UCP_WATSONX_API_KEY=your-watsonx-api-key-here
UCP_WATSONX_PROJECT_ID=your-watsonx-project-id-here
UCP_WATSONX_URL=https://us-south.ml.cloud.ibm.com
UCP_WATSONX_DEFAULT_MODEL=ibm/granite-13b-chat-v2
UCP_WATSONX_MAX_TOKENS=2048
UCP_WATSONX_TEMPERATURE=0.7

# Ollama (Local)
UCP_OLLAMA_BASE_URL=http://localhost:11434
UCP_OLLAMA_DEFAULT_MODEL=llama3.2
UCP_OLLAMA_TIMEOUT=300

# ============================================================================
# Embedding Model Configuration
# ============================================================================

UCP_EMBEDDING__PROVIDER=openai
UCP_EMBEDDING__MODEL=text-embedding-3-small
UCP_EMBEDDING__BATCH_SIZE=100
UCP_EMBEDDING__MAX_RETRIES=3

# ============================================================================
# Langflow Integration
# ============================================================================

UCP_LANGFLOW__BASE_URL=http://localhost:7860
UCP_LANGFLOW__API_KEY=
UCP_LANGFLOW__TIMEOUT=120
UCP_LANGFLOW__FLOWS_DIR=./flows

# ============================================================================
# MCP (Model Context Protocol) Configuration
# ============================================================================

# IBM mcp-context-forge Gateway
UCP_MCP__CONTEXT_FORGE_URL=http://localhost:4444
UCP_MCP__CONTEXT_FORGE_API_KEY=
UCP_MCP__TIMEOUT=60
UCP_MCP__MAX_RETRIES=3

# MCP Virtual Servers
UCP_MCP__SERVERS_CONFIG_PATH=./mcp/config/servers.json
UCP_MCP__ENABLE_CUSTOM_SERVERS=true

# ============================================================================
# CrewAI Configuration
# ============================================================================

UCP_CREWAI__MAX_ITERATIONS=15
UCP_CREWAI__TIMEOUT=300
UCP_CREWAI__VERBOSE=true
UCP_CREWAI__MEMORY_ENABLED=true

# ============================================================================
# Authentication & Security
# ============================================================================

# JWT Secret (CHANGE THIS IN PRODUCTION!)
UCP_JWT_SECRET=your-super-secret-jwt-key-change-in-production
UCP_JWT_ALGORITHM=HS256
UCP_JWT_EXPIRATION_MINUTES=60

# API Key for external integrations
UCP_API_KEY=your-api-key-for-external-integrations

# Rate Limiting
UCP_RATE_LIMIT__ENABLED=true
UCP_RATE_LIMIT__REQUESTS_PER_MINUTE=60
UCP_RATE_LIMIT__BURST=10

# ============================================================================
# Caching Configuration
# ============================================================================

# Redis (optional, for caching)
UCP_REDIS__ENABLED=false
UCP_REDIS__URL=redis://localhost:6379/0
UCP_REDIS__PASSWORD=
UCP_REDIS__TTL=3600
UCP_REDIS__MAX_CONNECTIONS=10

# In-memory cache (fallback)
UCP_CACHE__ENABLED=true
UCP_CACHE__MAX_SIZE=1000
UCP_CACHE__TTL=600

# ============================================================================
# Multi-Tenancy Configuration
# ============================================================================

# Tenant configuration directory
UCP_TENANTS__CONFIG_DIR=./config/tenants

# Default tenant settings
UCP_TENANTS__DEFAULT_PROVIDER=openai
UCP_TENANTS__DEFAULT_MODEL=gpt-4o
UCP_TENANTS__ENABLE_ISOLATION=true

# ============================================================================
# Monitoring & Observability
# ============================================================================

# Logging
UCP_LOG__FORMAT=json
UCP_LOG__OUTPUT=stdout
UCP_LOG__FILE_PATH=./logs/app.log
UCP_LOG__ROTATION=daily
UCP_LOG__RETENTION_DAYS=30

# Metrics & Tracing
UCP_METRICS__ENABLED=true
UCP_METRICS__EXPORT_INTERVAL=60
UCP_METRICS__PROMETHEUS_PORT=9090

# OpenTelemetry (optional)
UCP_OTEL__ENABLED=false
UCP_OTEL__ENDPOINT=http://localhost:4318
UCP_OTEL__SERVICE_NAME=universal-copilot-platform

# Sentry Error Tracking (optional)
UCP_SENTRY__ENABLED=false
UCP_SENTRY__DSN=
UCP_SENTRY__ENVIRONMENT=dev
UCP_SENTRY__TRACES_SAMPLE_RATE=0.1

# ============================================================================
# Governance & Compliance
# ============================================================================

# Audit Logging
UCP_AUDIT__ENABLED=true
UCP_AUDIT__LOG_ALL_REQUESTS=true
UCP_AUDIT__LOG_LLM_CALLS=true
UCP_AUDIT__LOG_TOOL_CALLS=true
UCP_AUDIT__RETENTION_DAYS=90

# Token Tracking & Cost Management
UCP_COST__TRACKING_ENABLED=true
UCP_COST__ALERT_THRESHOLD_USD=1000
UCP_COST__MONTHLY_BUDGET_USD=5000

# PII Detection
UCP_PII__DETECTION_ENABLED=false
UCP_PII__REDACTION_ENABLED=false
UCP_PII__PATTERNS=email,phone,ssn,credit_card

# ============================================================================
# Development & Testing
# ============================================================================

# Testing
UCP_TESTING__DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/universal_copilot_test
UCP_TESTING__VECTOR_STORE_URL=http://localhost:6333
UCP_TESTING__MOCK_LLM=false

# Demo Data
UCP_DEMO__LOAD_SAMPLE_TENANTS=true
UCP_DEMO__LOAD_SAMPLE_DOCUMENTS=true
UCP_DEMO__SAMPLE_DATA_PATH=./data/demo

# ============================================================================
# Feature Flags
# ============================================================================

UCP_FEATURES__STREAMING_ENABLED=true
UCP_FEATURES__MULTI_MODAL_ENABLED=false
UCP_FEATURES__VOICE_ENABLED=false
UCP_FEATURES__ASYNC_TASKS_ENABLED=true
UCP_FEATURES__EXPERIMENTAL_RAG=false

# ============================================================================
# Performance Tuning
# ============================================================================

# Connection Pooling
UCP_POOL__LLM_MAX_CONNECTIONS=50
UCP_POOL__DB_MAX_CONNECTIONS=20
UCP_POOL__VECTOR_MAX_CONNECTIONS=10

# Timeouts (seconds)
UCP_TIMEOUT__LLM_REQUEST=120
UCP_TIMEOUT__VECTOR_SEARCH=10
UCP_TIMEOUT__DATABASE_QUERY=30
UCP_TIMEOUT__EXTERNAL_API=60

# Request Queue
UCP_QUEUE__MAX_SIZE=1000
UCP_QUEUE__TIMEOUT=300

# ============================================================================
# Third-Party Integrations (Optional)
# ============================================================================

# CRM Integration (Salesforce, HubSpot, etc.)
UCP_CRM__ENABLED=false
UCP_CRM__PROVIDER=salesforce
UCP_CRM__API_KEY=
UCP_CRM__BASE_URL=

# HRIS Integration (Workday, BambooHR, etc.)
UCP_HRIS__ENABLED=false
UCP_HRIS__PROVIDER=workday
UCP_HRIS__API_KEY=
UCP_HRIS__BASE_URL=

# Document Storage (S3, GCS, Azure Blob)
UCP_STORAGE__ENABLED=false
UCP_STORAGE__PROVIDER=s3
UCP_STORAGE__BUCKET=universal-copilot-docs
UCP_STORAGE__REGION=us-east-1
UCP_STORAGE__ACCESS_KEY=
UCP_STORAGE__SECRET_KEY=

# Email Service (SendGrid, AWS SES, etc.)
UCP_EMAIL__ENABLED=false
UCP_EMAIL__PROVIDER=sendgrid
UCP_EMAIL__API_KEY=
UCP_EMAIL__FROM_ADDRESS=noreply@example.com

# ============================================================================
# End of Configuration
# ============================================================================

# Notes:
# - All UCP_* variables follow the pattern: UCP_<SECTION>__<KEY>
# - Boolean values: true/false (case-insensitive)
# - Lists: comma-separated values
# - Secrets: NEVER commit actual secrets to version control
# - Production: Review and update ALL default passwords and keys
